{% extends 'main.html.twig' %}

{% block title %}Noticias
{% endblock %}

{% block formSection %}
	<h1>Eventos</h1>
	<table class='table'>
		<tr>
			{# sorting of properties based on query components #}
			<th>Id</th>
			<th>Titulo</th>
			<th>Fecha del evento</th>
			<th>Descripcion</th>
			<th>Imagen</th>
			<th>Actions</th>
		</tr>
	</th>
</tr>

{# table body #}
{% for article in pagination %}
	<tr {% if loop.index is odd %} class='color' {% endif %}>
		<td>{{ article.id }}</td>
		<td>{{ article.titulo }}</td>
		<td>{{ article.fecha ? article.fecha|date('d-m-Y') : '' }}</td>
		<td>{{ article.descripcion }}</td>
		<td>{{ article.imagen }}</td>
		<td>
			<a href="{{ path('noticia_show', {'id': article.id}) }}">show</a>
			<a href="{{ path('noticia_edit', {'id': article.id}) }}">edit</a>
		</td>
	</tr>
{% else %}
	<tr>
		<td colspan='6'>no records found</td>
	</tr>
{% endfor %}</table>{# display navigation #}<div class='navigation d-flex justify-content-center'>
{{ knp_pagination_render(pagination) }}</div>{% endblock %}
