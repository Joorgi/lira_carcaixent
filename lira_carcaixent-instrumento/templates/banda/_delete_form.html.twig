<form method='post' action="{{ path('banda_delete', {'id': banda.id}) }}" onsubmit='return confirm("Are you sure you want to delete this item?");'>
	<input type='hidden' name='_token' value="{{ csrf_token('delete' ~ banda.id) }}">
	<button class='btn hover-red'>
		<i class='fa fa-trash' aria-hidden='true'></i>
	</button>
</form>
