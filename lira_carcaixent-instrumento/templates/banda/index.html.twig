{% extends 'main.html.twig' %}

{% block title %}Banda index
{% endblock %}

{% block formSection %}
	<h1>Banda index</h1>

	<table class='table table-striped'>
		<thead class='text-center'>
			<tr>
				<th>Id</th>
				<th>Nombre</th>
				<th>Editar</th>
				<th>Eliminar</th>
			</tr>
		</thead>
		<tbody>
			{% for banda in bandas %}
				<tr class='text-center align-middle text-capitalize'>
					<td>{{ banda.id }}</td>
					<td>{{ banda.nombre }}</td>
					<td>
						<a class='btn hover-blue' href="{{ path('banda_show', {'id': banda.id}) }}">
							<i class='fa-solid fa-pen-to-square'></i>
						</a>
					</td>
					<td>
						{{ include('banda/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan='3'>no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
